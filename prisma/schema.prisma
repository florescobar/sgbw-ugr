generator client {
  provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = "file:database.sqlite"
}

model User {
	id          Int        @id @default(autoincrement())
	createdAt   DateTime   @default(now())
	email       String     @unique
	username    String     @unique
	firstName   String?   
	lastName    String?
	admin       Boolean    @default(false)
	image       String?    @unique
}

model Factura {
	id          Int        @id @default(autoincrement())
	client      String
	date		DateTime
	concept     String
	cuantity    Float
	price		Float
	total       Float
}